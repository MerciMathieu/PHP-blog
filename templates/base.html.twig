<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}blog de Mathieu Delclos{% endblock %}</title>
    {% endblock %}
    
    {% block stylesheets %} 
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="css/main.css">
        <link rel="stylesheet" href="css/variables.css">
    {% endblock %}
</head>
<body>
    <div id="header">
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand ml-5" href="/">Blog de Mathieu Delclos</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav ml-auto mr-5">
                        <li class="nav-item dropdown mr-2">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Accueil</a>
                            <div class="dropdown-menu">
                                <a class="nav-link dropdown-item" href="/">Page de garde</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link dropdown-item" href="#">A propos</a>
                                <a class="nav-link dropdown-item" href="#">Derniers articles</a>
                                <a class="nav-link dropdown-item" href="#">Contact</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="?action=blog">Blog</a>
                        </li>
                    </ul>
                </div>
            </nav>
            
        {% endblock %}
    </div>

    
    <div id="content">
        {% block content %}{% endblock %}
    </div>
    

    <div id="footer">
        {% block footer %}
            <div class="text-center">
                <div class="socials-footer color-white">
                    <h3 class="pt-5 pb-3">RÃ©seaux sociaux</h3>
                    <div id="icons" class="pb-5">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
            <div class="navbar-dark bg-dark">
                <div class="text-center">
                    <small class="navbar-brand" href="/">&copy; Copyright 2020</small>
                </div>
            </div>
        {% endblock %}
    </div>

    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/6627e4919c.js" crossorigin="anonymous"></script>
    {% endblock %}
</body>
</html>