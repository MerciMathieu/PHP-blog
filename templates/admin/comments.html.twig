{% extends "baseadmin.html.twig" %}

{% block title %}Commentaires - {{ parent() }}{% endblock %}

{% block content %}
    <section id="article-edit">
        <div class="container">
            <div class="text-center mb-5">
                <a class="" href="?action=admin"><i class="fas fa-arrow-left mr-2"></i>Retour à la liste des articles</a>
            </div>
            <div class="text-center pb-5">
                <h1>Commentaires de l'article</h1>
                <h2>"{{ post.title }}"</h2>
            </div>
            <h3 class="pt-5"><i class="fas fa-envelope mr-2"></i>Commentaires à valider ({{ comments|length }})</h3>
            <table class="table table-striped mb-5 comments">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Commentaire</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>
                                <div class="comment">
                                    <p class="font-weight-bold">{{ comment.author }}
                                        <small class="text-muted ml-2">
                                        {% if comment.updatedAt %}
                                            modifié le {{ comment.createdAt|date('d-m-Y à H:i:s') }}
                                        {% else %}    
                                            posté le {{ comment.createdAt|date('d-m-Y à H:i:s') }}
                                        {% endif %}
                                        </small>
                                    </p>
                                    <p>{{ comment.content }}</p>
                                </div>
                            </td>
                            <td class="text-center">
                                <a href="#" title="Valider le commentaire">
                                    <i class="fas fa-check" style="color: green;"></i>
                                </a>
                                <a href="#" title="Supprimer le commentaire">
                                    <i class="fas fa-times" style="color: red;"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}