{% extends "baseadmin.html.twig" %}

{% block title %}ADMINISTRATION LOGIN{% endblock %}

{% block content %}

    <section>
        <form method="post" class="m-auto w-50 py-5">
            <fieldset>
                <legend class="text-center">Se connecter</legend>
                    <div class="form-group">
                        <label for="email">Email <abbr title="required">*</abbr></label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Entrez votre email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password <abbr title="required">*</abbr></label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Mot de passe" required>
                    </div>
                    <button type="submit" name="submit" class="button-link">Se connecter</button>
            </fieldset>
        </form>
    </section>

{% endblock %}