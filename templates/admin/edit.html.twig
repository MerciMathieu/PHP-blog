{% extends "baseadmin.html.twig" %}

{% block title %}Modifier - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <section id="article-edit">
        <div class="container">
            <div class="text-center mb-5">
                <a class="" href="?action=admin"><i class="fas fa-arrow-left mr-2"></i>Retour Ã  la liste</a>
            </div>
            <h1 class="text-center mb-5">Modifier l'article 1</h1>
            <form action="" method="post" class="">
                <div class="row">
                    <div id="group-author" class="form-group">
                        <label for="author">Auteur:</label>
                        <input type="text" class="form-control" name="author" id="author" placeholder="{{ post.author|raw }}" disabled/>
                    </div>
                    <div id="group-title" class="form-group">
                        <label for="title">Titre:</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="{{ post.title|raw }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="image">Image(url):</label>
                    <input type="text" class="form-control" name="image" id="image" placeholder={% if post.imageUrl %}"{{ post.imageUrl }}"{% else %}"https://exemple-image-url.fr/"{% endif %} />
                </div>
                <div class="form-group">
                    <label for="intro">Intro:</label>
                    <textarea type="text" class="form-control" name="intro" id="intro" placeholder="{{ post.intro|raw }}" rows="2"></textarea>
                </div>
                <div class="form-group">
                    <label for="content">Contenu:</label>
                    <textarea type="text" class="form-control" name="content" id="content" placeholder="{{ post.content|raw }}" rows="10"></textarea>
                </div>
                <div class="text-right mb-5">
                    <button type="submit" class="button-link w-100">Valider</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}