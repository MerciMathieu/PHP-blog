{% extends "baseadmin.html.twig" %}

{% block title %}Modifier - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="css/admin/edit.css">
{% endblock %}

{% block content %}
    <section id="article-edit">
        <div class="container">
            <div class="text-center mb-5">
                <a class="" href="?action=admin"><i class="fas fa-arrow-left mr-2"></i>Retour à la liste</a>
            </div>
            <h1 class="text-center mb-5">Modifier l'article</h1>
            <form action="" method="post" class="">
                <div class="row">
                    <div id="group-author" class="form-group">
                        <label for="author">Auteur:</label>
                        <input type="text" class="form-control" name="author" id="author" placeholder="" />
                    </div>
                    <div id="group-title" class="form-group">
                        <label for="title">Titre:</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="intro">Chapô:</label>
                    <textarea type="text" class="form-control" name="intro" id="intro" placeholder="" rows="2"></textarea>
                </div>
                <div class="form-group">
                    <label for="content">Contenu:</label>
                    <textarea type="text" class="form-control" name="content" id="content" placeholder="" rows="10"></textarea>
                </div>
                <div class="text-right mb-5">
                    <button type="submit" class="button-link w-100">Valider</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}