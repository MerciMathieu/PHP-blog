{% extends "base.html.twig" %}

{% block title %}Register - {{ parent() }}{% endblock %}

{% block content %}

    <section id="register" class="color-blue">
        <form method="post" class="m-auto w-50">
            <fieldset>
                <legend class="text-center">Créer un compte</legend>
                    <div class="row">
                        <div class="col">
                            <label for="lastname">Nom <abbr title="required">*</abbr></label>
                            <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Entrez votre nom" {% if postvariables.lastname %}value="{{ postvariables.lastname }}"{% endif %} required>
                        </div>     
                        <div class="col">
                            <label for="firstname">Prénom <abbr title="required">*</abbr></label>
                            <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Entrez votre prénom" {% if postvariables.firstname %}value="{{ postvariables.firstname }}"{% endif %} required>
                        </div>           
                    </div>
                    <div class="form-group">
                        <label for="email">Email <abbr title="required">*</abbr></label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Entrez votre email" {% if postvariables.email %}value="{{ postvariables.email }}"{% endif %} required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password <abbr title="required">*</abbr></label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group">
                        <label for="confirm_password">Confirm password <abbr title="required">*</abbr></label>
                        <input type="password" name="confirm_password" class="form-control" id="confirm_password" placeholder="Confirmez votre mot de passe" required>
                    </div>
                    <button type="submit" name="submit" class="button-link">S'enregistrer</button>
            </fieldset>
        </form>
        <p class="text-center">Vous avez déjà un compte? <a href="/login">Se connecter</a></p>
    </section>

{% endblock %}