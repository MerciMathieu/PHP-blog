                </div>
                <div class="form-group">
                    <label for="email" hidden >Email:</label>
                    <input type="email" class="form-control {{ textColorError.email }}" name="email" id="email" {% if postVariables.email %}value="{{postVariables.email}}"{% endif %} placeholder="Entrez votre email"  required/>
                </div>
                <div class="form-group">
                    <label for="message" hidden>Message:</label>
                    <textarea type="text" class="form-control {{ textColorError.message }}" name="message" id="message" placeholder="Tapez votre message" rows="5" required>{% if postVariables.message %}{{postVariables.message}}{% endif %}</textarea>
